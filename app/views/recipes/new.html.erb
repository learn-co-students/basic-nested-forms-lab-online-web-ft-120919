<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.fields_for :ingredients do |attributes| %>
        <%= attributes.label :name %>
        <%= attributes.text_field :name %><br>

        <%= attributes.label :quantity %>
        <%= attributes.text_field :quantity %><br>

    <% end %>

    <%= f.submit %>
<% end %>