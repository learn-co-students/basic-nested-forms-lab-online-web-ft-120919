<h1>New Recipe</h1>

<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <h3>Ingredients</h3>

  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
